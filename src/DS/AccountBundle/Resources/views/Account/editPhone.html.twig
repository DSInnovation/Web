        if ( $('#form_tel').val().length < 10 ) {
            $('#form_edit_phone_but').attr("disabled", true);
        } else {
            $('#form_edit_phone_but').attr("disabled", false);
        }
    }
        
    $('#form_tel').keyup(function() {
        checkPhone();
    });
    
